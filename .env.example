# Environment Configuration for Room Booking System
# Copy this file to .env and update the values

# Core Settings
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
SECURE_SSL_REDIRECT=True

# CSRF Settings for external access (adjust based on your domain)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://localhost:8001
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Database Settings
DB_HOST=db
DB_NAME=room_usage_db
DB_USER=django_user
DB_PASSWORD=change-this-password
DB_PORT=3306
MYSQL_ROOT_PASSWORD=change-this-root-password

# Docker Configuration
CONTAINER_PREFIX=room_booking
WEB_PORT=8001
CONTAINER_USER=django

# Email Settings (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=your-smtp-server.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password

# Superuser (Optional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=change-this-admin-password

# Production Environment Variables
# REDIS_URL=redis://redis:6379/1
# SENTRY_DSN=your-sentry-dsn
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
