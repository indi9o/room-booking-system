# Production Environment Configuration
# Copy this to .env.production and update with your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Configuration
DB_NAME=room_usage_db
DB_USER=django_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=3306
MYSQL_ROOT_PASSWORD=your-secure-root-password

# Docker Compose Configuration
CONTAINER_PREFIX=room_booking_prod
CONTAINER_USER=django
ENV_FILE=.env.production
WEB_PORT=80

# Resource Limits for Production
DB_MEMORY_LIMIT=1G
DB_MEMORY_RESERVE=512M
WEB_MEMORY_LIMIT=2G
WEB_MEMORY_RESERVE=1G

# Health Check Configuration
HEALTH_INTERVAL=30s
HEALTH_TIMEOUT=10s
HEALTH_RETRIES=3
HEALTH_START_PERIOD=40s
HEALTH_DISABLE=false

# Logs
LOGS_VOLUME=./logs

# Django Superuser (optional, for automatic creation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_LOG_LEVEL=warning

# Security Settings (production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

