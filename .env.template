# Development Environment Configuration
# Copy this to .env for development

# Django Settings
DEBUG=True
SECRET_KEY=dev-secret-key-not-for-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=room_usage_db
DB_USER=django_user
DB_PASSWORD=django_password
DB_HOST=db
DB_PORT=3306
MYSQL_ROOT_PASSWORD=root_password

# Docker Compose Configuration (Development defaults)
CONTAINER_PREFIX=room_booking_dev
CONTAINER_USER=root
ENV_FILE=.env
WEB_PORT=8001

# Resource Limits (lighter for development)
DB_MEMORY_LIMIT=512M
DB_MEMORY_RESERVE=256M
WEB_MEMORY_LIMIT=1G
WEB_MEMORY_RESERVE=512M

# Health Check (less frequent for development)
HEALTH_INTERVAL=60s
HEALTH_TIMEOUT=10s
HEALTH_RETRIES=3
HEALTH_START_PERIOD=40s
HEALTH_DISABLE=false

# Logs
LOGS_VOLUME=./logs

# Django Superuser (for development)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin
DJANGO_SUPERUSER_EMAIL=admin@localhost

# Gunicorn Configuration (development)
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=60
GUNICORN_LOG_LEVEL=debug
